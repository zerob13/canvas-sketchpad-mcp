{
	"name": "canvas-sketchpad-mcp",
	"version": "1.0.0",
	"description": "AI Canvas Drawing Service with MCP Server",
	"main": "src/index.ts",
	"scripts": {
		"dev": "npm run build:frontend && tsx watch src/index.ts",
		"start": "node dist/index.js",
		"build": "tsc",
		"build:frontend": "esbuild ./src/public/main.ts --bundle --outfile=./src/public/dist/main.js --minify",
