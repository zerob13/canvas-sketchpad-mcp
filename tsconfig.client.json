{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "src/public/dist",
    "rootDir": "src/public",
    "declaration": false,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/public/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
